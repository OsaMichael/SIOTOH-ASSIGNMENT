@model SiotohBlog.ViewModel.BlogModel
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<h2>Upload Blog</h2>
<h2></h2>

@if (User.Identity.IsAuthenticated)
{
    <div class="card-body" id="bar-parent">
        <form action="UploadBlog" method="Post" id="form_sample_1" class="form-horizontal" novalidate="novalidate">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="form-body">

                <div class="form-group row" style="">
                    <label class="control-label col-md-3">
                        @Html.DisplayNameFor(model => model.Title)
                    </label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @placeholder = "" })
                        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3">
                        @Html.DisplayNameFor(model => model.ShortDescription)
                    </label>
                    <div class="col-md-8">
                        <textarea class="img-shadow" cols="35" id="ShortDescription" name="ShortDescription" rows="2"></textarea>

                        @Html.ValidationMessageFor(m => m.ShortDescription, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3">
                        @Html.DisplayNameFor(model => model.Description)
                    </label>
                    <div class="col-md-8">
                        <textarea class="img-shadow" cols="35" id="Description" name="Description" rows="5"></textarea>

                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="control-label col-md-3">
                        @Html.DisplayNameFor(model => model.PublicationDate)
                    </label>
                    <div class="col-md-8">
                        <input type="date" name="ExpiringDate" class="form-control" value="dd/MM/yyyy" />
                        @Html.ValidationMessageFor(m => m.PublicationDate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="offset-md-3 col-md-6 pull-right">
                            <button type="submit" class="btn btn-info" id="submitData">Upload</button>

                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
}
else
{
    <p>You are not authenticated to create a new blog</p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://lipis.github.io/bootstrap-sweetalert/lib/sweet-alert.js"></script>
    <link href="~/Content/sweetalert/sweet-alert.css" rel="stylesheet" />
}
